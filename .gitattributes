# 기본: 텍스트 자동 감지
* text=auto

# 프론트/백 공통 - 텍스트는 LF 고정
*.js    text eol=lf
*.jsx   text eol=lf
*.ts    text eol=lf
*.tsx   text eol=lf
*.css   text eol=lf
*.scss  text eol=lf
*.html  text eol=lf
*.json  text eol=lf
*.yml   text eol=lf
*.yaml  text eol=lf
*.md    text eol=lf
*.sh    text eol=lf

# Gradle/스크립트
gradlew  text eol=lf
*.bat    text eol=crlf

# 바이너리(merge 금지)
*.png  binary
*.jpg  binary
*.jpeg binary
*.gif  binary
*.ico  binary
*.pdf  binary
*.zip  binary
*.jar  binary

# Java/Kotlin/Gradle
*.java   text eol=lf
*.kt     text eol=lf
*.kts    text eol=lf
*.gradle text eol=lf
*.properties text eol=lf
*.xml    text eol=lf   # pom.xml, configs 등

# 빌드/인프라
Dockerfile text eol=lf
*.sql     text eol=lf
Makefile  text eol=lf